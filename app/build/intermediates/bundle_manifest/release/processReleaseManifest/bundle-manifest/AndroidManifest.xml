<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stuffbox.webscraper"
    android:versionCode="1"
    android:versionName="6" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:icon="@drawable/psyduck"
        android:label="Anime Watcher"
        android:roundIcon="@drawable/psyduck"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >
        <activity
            android:name="com.stuffbox.webscraper.activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="Anime Watcher" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.stuffbox.webscraper.activities.WatchVideo"
            android:configChanges="orientation|screenSize|smallestScreenSize|screenLayout"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="landscape"
            android:supportsPictureInPicture="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name="com.stuffbox.webscraper.activities.selectEpisode"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.stuffbox.webscraper.activities.webvideo"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name="com.stuffbox.webscraper.activities.AnimeList"
            android:configChanges="orientation|screenSize"
            android:label="Anime List" />
        <activity
            android:name="com.stuffbox.webscraper.activities.Settings"
            android:configChanges="orientation|screenSize"
            android:label="Settings" />

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.stuffbox.webscraper.com.squareup.picasso"
            android:exported="false" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />
    </application>

</manifest>